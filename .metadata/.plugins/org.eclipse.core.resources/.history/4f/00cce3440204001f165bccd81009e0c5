import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.edge.EdgeDriver;
import org.testng.Assert;

public class Locators2 {
	public static void main(String[] args) {
		WebDriver driver = new EdgeDriver();
		//when something is not showing up in page, wait 5 seconds before failing
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(5));
		driver.get("https://rahulshettyacademy.com/locatorspractice/");
		driver.findElement(By.id("inputUsername")).sendKeys("k3llyr00@gmail.com");
		driver.findElement(By.name("inputPassword")).sendKeys("rahulshettyacademy");
		driver.findElement(By.id("chkboxTwo")).click();
		driver.findElement(By.className("signInBtn")).click();
		
		//Use only if there is no other locators and only one such tag is represent. It finds the first one.
		Assert.assertEquals(driver.findElement(By.cssSelector("div>h1>p")).getText(), "You are successfully logged in.");
	}

}
